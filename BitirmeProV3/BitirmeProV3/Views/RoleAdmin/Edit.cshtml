@model BitirmeProV3.Models.RoleEditModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="container mt-20">
    @using (Html.BeginForm())
    {
        <input type="hidden" name="roleName" value="@Model.Role.Name" />
        <input type="hidden" name="roleId" value="@Model.Role.Id" />

        <div class="panel panel-primary">
            <div class="panel-heading">
                Add to @Model.Role.Name
            </div>
            <table class="table table-striped">
                @if (Model.NonMembers.Count() == 0)
                {
                    <tr><td colspan="2">Bu role eklenebilecek kullanici yok</td></tr>
                }
                else
                {
                    <tr>
                        <td>User Id</td>
                        <td>Role</td>
                    </tr>
                    foreach (var user in Model.NonMembers)
                    {
                        <tr>
                            <td>@user.UserName</td>
                            <td><input type="checkbox" name="IdsToAdd" value="@user.Id" /> </td>
                        </tr>
                    }
                }
            </table>
        </div>



        <div class="panel panel-primary">
            <div class="panel-heading">
                Remove from @Model.Role.Name
            </div>
            <table class="table table-striped">
                @if (Model.Members.Count() == 0)
                {
                    <tr><td colspan="2">Bu role eklenmis kullanici yok</td></tr>
                }
                else
                {
                    <tr>
                        <td>User Id</td>
                        <td>Role</td>
                    </tr>
                    foreach (var user in Model.Members)
                    {
                        <tr>
                            <td>@user.UserName</td>
                            <td><input type="checkbox" name="IdsToDelete" value="@user.Id" /> </td>
                        </tr>
                    }
                }
            </table>
        </div>

        <button type="submit" class="btn btn-primary">Kaydet</button>
    }
</div>

